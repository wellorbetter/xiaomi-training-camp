<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mine_background"
    tools:context=".fragment.RecommendFragment">
    <ImageView
        android:layout_width="26dp"
        android:id="@+id/iv_circle_outline"
        android:gravity="center"
        android:src="@drawable/loading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="26dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/iv_circle_outline"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/tv_loading"
        android:textFontWeight="380"
        android:textSize="16sp"
        android:fontFamily="@font/misans_vf"
        android:textColor="@color/transparent_20"
        android:text="加载中"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>