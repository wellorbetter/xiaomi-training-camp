<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.ClassFragment2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:textSize="26sp"
                android:layout_gravity="center|left"
                android:layout_width="wrap_content"
                android:text="设置"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/search_back"
                android:layout_marginBottom="15dp"
                android:layout_height="40dp">
                <ImageView
                   android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:src="@drawable/search"
                    android:id="@+id/search"
                    android:layout_height="40dp"/>
                <EditText
                    android:background="@null"
                    android:layout_marginEnd="10dp"
                    android:hint="搜索系统设置项"
                    android:layout_toEndOf="@id/search"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/hint_back"
                android:layout_marginBottom="15dp"
                android:layout_height="40dp">
                <EditText
                    android:background="@null"
                    android:layout_marginEnd="10dp"
                    android:hint="存储空间已满"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_marginStart="15dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/bt_hint"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:background="@drawable/bt_next"
                    android:layout_height="50dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/iv_user"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/img" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/ll_user"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_user"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="2561405627" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#8E8A8A"
                        android:gravity="center"
                        android:text="管理账号、云服务、会员权益等" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/bt_user"
                    android:gravity="center"
                    android:text="我的设备" />

                <Button
                    android:id="@+id/bt_user"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:background="@drawable/bt_next"
                    android:layout_height="50dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/iv_0"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_0"
                    android:gravity="center"
                    android:text="我的设备" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/bt_0"
                    android:textColor="#8E8A8A"
                    android:gravity="center"
                    android:text="MIUI 14
0.4" />

                <Button
                    android:id="@+id/bt_0"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:background="@drawable/bt_next"
                    android:layout_height="50dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/iv_1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_1"
                    android:gravity="center"
                    android:text="双卡与移动网络" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/bt_1"
                    android:gravity="center"
                    android:text="" />

                <Button
                    android:id="@+id/bt_1"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:background="@drawable/bt_next"
                    android:layout_height="50dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/iv_2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/iv_2"
                    android:gravity="center"
                    android:text="WLAN" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/bt_2"
                    android:textColor="#8E8A8A"
                    android:gravity="center"
