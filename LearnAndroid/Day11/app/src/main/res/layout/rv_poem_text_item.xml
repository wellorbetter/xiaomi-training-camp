<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp"
    android:id="@+id/card"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_poem_title"
                    android:text="@string/poem_0_poem_name"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/poem_0_poet_name"
                    android:textStyle="italic"
                    android:id="@+id/tv_poet_name"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_poem_content"
                android:layout_width="wrap_content"
                android:text="@string/poem_0_context"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageButton
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:id="@+id/ib_like"
            android:background="@drawable/select_like"
            android:layout_height="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>